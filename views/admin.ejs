<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio | Dawflix</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./styles.css">
    <link rel="icon" type="image/png" href="favicon.png" />
  </head>
  <body>
    <%- include('header.ejs') -%>
    <main>
      <div class="container main-home-container">
        <h1 class="admin-section-title">Todas las películas</h1>
        <table class="admin-table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Título</th>
              <th>Director</th>
              <th>Resumen</th>
              <th>Género</th>
              <th>Fecha</th>
              <th>Acción</th>
            </tr>
          </thead>
          <tbody>
            <% for (const movie of movies) { %>
              <tr>
                <td><%- movie.id %></td>
                <td><%- movie.title %></td>
                <td><%- movie.director %></td>
                <td class="resume-field"><%- movie.resume %></td>
                <td><%- movie.category %></td>
                <td><%- movie.release_date %></td>
                <td>
                  <i class="admin-btn fa-solid fa-pen" title="Editar"></i>
                  <i class="admin-btn fa-solid fa-trash-can" title="Eliminar"></i>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <h1 class="admin-section-title">Todas las series</h1>
        <table class="admin-table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Título</th>
              <th>Director</th>
              <th>Resumen</th>
              <th>Género</th>
              <th>Temporadas</th>
              <th>Fecha</th>
              <th>Acción</th>
            </tr>
          </thead>
          <tbody>
            <% for (const serie of series) { %>
              <tr>
                <td><%- serie.id %></td>
                <td><%- serie.title %></td>
                <td><%- serie.director %></td>
                <td class="resume-field"><%- serie.resume %></td>
                <td><%- serie.category %></td>
                <td><%- serie.seasons %></td>
                <td><%- serie.release_date %></td>
                <td>
                  <i class="admin-btn fa-solid fa-pen" title="Editar"></i>
                  <i class="admin-btn fa-solid fa-trash-can" title="Eliminar"></i>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('footer.ejs') -%>
  </body>
</html>