<header class="<%- locals.movie || locals.serie ? 'movie-header' : 'main-header' %>">
  <div class="header-section">
    <a href="/" class="header-logo">Dawflix</a>
    <nav class="header-nav">
      <% if (locals.user) { %>
        <div class="nav-item"><a href="/movies">Películas</a></div>
        <div class="nav-item"><a href="/series">Series</a></div>
        <div class="nav-item"><a href="/saved">Mi lista</a></div>
      <% } %>
    </nav>
  </div>
  <div class="header-section">
    <% if (locals.user) { %>
      <% if (locals.user.role === 'admin') { %>
        <a href="/admin" class="header-user-link">Admin</a>
      <% } %>
      <a href="/profile" class="header-user-link">Mi perfil</a>
      <a href="/api/auth/logout" class="header-user-link logout">Cerrar sesión</a>
    <% } else{ %>
      <a href="/login" class="login-btn">Iniciar sesión</a>
   <% } %>
